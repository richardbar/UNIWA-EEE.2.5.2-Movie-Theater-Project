@using MovieTheaterProject.UI.Utilities.LoginManager

@inject ILoginManager loginManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">UNIWA EEE.2.5.2 Movie Theater Project.UI</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reservation" Match="NavLinkMatch.All">
                <span class="oi oi-credit-card" aria-hidden="true"></span> Reservation
            </NavLink>
        </div>

        @if (_loggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="createmovie">
                    <span class="oi oi-plus" aria-hidden="true" /> Create Movie
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="createmovietheater">
                    <span class="oi oi-plus" aria-hidden="true" /> Create Movie Theater
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="createmovieviewing">
                    <span class="oi oi-plus" aria-hidden="true" /> Create Movie Viewing
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool _loggedIn => loginManager.IsLoggedIn();

    public static bool collapseNavMenu { get; private set; } = true;

    private static string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    public static void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
